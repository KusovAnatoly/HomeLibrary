@model List<AspNetMvc.Models.BookViewModel>
@{
    ViewData["Title"] = "Книги";
}

<h2>Книги</h2>
<a href="@Url.Action("Create", "Book")">Добавить книгу</a>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Издательство</th>
            <th>Год</th>
            <th>ISBN</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.AuthorName</td>
                <td>@book.PublisherName</td>
                <td>@book.PublishYear</td>
                <td>@book.ISBN</td>
                <td>
                    <a href="@Url.Action("Details", "Book", new { id = book.BookID })" class="btn btn-sm btn-primary">Посмотреть</a>
                    <a href="@Url.Action("Edit", "Book", new { id = book.BookID })" class="btn btn-sm btn-primary">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>
